generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Temperature {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  value      Float
  maxValue   Float
  minValue   Float
  lat        String
  long       String
  cityId     String
  pressure   Float
  humidity   Float
  visibility Float

  // timestamp DateTime @default(now())
}

model City {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  state   String
  country String
}
